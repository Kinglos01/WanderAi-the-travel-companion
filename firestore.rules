rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Match the sessions collection
    match /sessions/{sessionId} {
      // ALLOW CREATE: if user is logged in AND the document's 'userId' field matches their UID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // ALLOW READ/UPDATE/DELETE: if user is logged in AND the stored document's 'userId' matches their UID
      // Note: For list queries, the query must explicitly filter by userId == auth.uid
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}